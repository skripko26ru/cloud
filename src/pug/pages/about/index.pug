extends ../../layout/main.pug

block db
	- var navActive = 'about';
	-
		var aboutList = [
			{ name: 'about-1', text: '13 лет с заказчиками создаем сложные, продуманные до мелочей приложения.' },
			{ name: 'about-2', text: 'Знаем, как и где взять данные для приложений' },
			{ name: 'about-2', text: 'Выполняем нашу работу быстрее наших конкурентов.' },
			{ name: 'about-4', text: 'Создали линейку собственных программных продуктов.' },
		]

block head	
	+head(
		'Digital Cloud - Компания', 
		'Специалисты CloudFactory создали линейку собственных программных продуктов.',
		'CloudFactory, банковские и брокерские приложения'
	)
	
block header
	+header('#F9F9FD')

block content
	main
		.about.container
			.title.about__title Мы		
			each item in aboutList
				.about__intro
					.about__intro-icon
						img(src= `/../assets/img/${item.name}.png` alt= item.name)
					.text= item.text

			.about__block-1.about--mt-150
				.text  
					span.about__block-1-title  «EffectiveTrade Mobile»
					|  — это удобная архитектура, состоящая из собственных решений СloudFactory и разворачивающихся  на стороне заказчика. 

			.about__block-1
				.about__block-1-title  Состоит из модулей:
				.text  
					span.about--blue Effectevetrade DataHub
					|  — API в виде REST сервиса.
				.text  	
					span.about--blue Effectevetrade Trading
					|  — решение, предназначенное для выставления заявок и связанных с этим бизнес-процессов.
				.text  	
					span.about--blue Effectevetrade Position keeping
					|  — аналитическая база данных.

			.about__block-2
				.title.about__block-2-title  МОДУЛЬ EFFECTIVETRADE DATAHUB				
				.text.about__block-2-text Ядро обработки  веб-запросов API в виде REST сервиса
				.text.about__block-2-text Идентификация права
				.text.about__block-2-text Портфельные данные
				.text.about__block-2-text Рыночные данные
				.text.about__block-2-text Торговые операции
				.text.about__block-2-text Неторговые операции
				.text.about__block-2-text Платежные системы
				.text.about__block-2-text Новости, аналитика, рекомендации
				.text.about__block-2-text Чаты и поддержка
				.text.about__block-2-text Продукты и сервисы
				.text.about__block-2-text Удаленное открытие счета
				.text.about__block-2-text Партнерские отношения

			.about__block-2
				.title.about__block-2-title  МОДУЛЬ EFFECTIVETRADE TRADING
				.about__block-2-wrap
					img(src= '/../assets/img/about-5.png' alt= 'about-5')
					span.text Отправка заявок
				.about__block-2-wrap
					img(src= '/../assets/img/about-6.png' alt= 'about-6')
					span.text Различные типы иснтрументов
				.about__block-2-wrap
					img(src= '/../assets/img/about-7.png' alt= 'about-7')
					span.text Смс/пин-код/TouchID/FaceId
				.about__block-2-wrap
					img(src= '/../assets/img/about-8.png' alt= 'about-8')
					span.text Журнал заявок

			.about__block-3.about--mb-150
				.title.about__block-3-title  МОДУЛЬ EFFECTIVETRADE POSITION KEEPING
				.text.about__block-3-text 
					span Аналитическая база данных 
					| предназначенная для обработки операций всех типов финансовых инструментов и всех видов сделок в режиме онлайн.
				.text.about__block-3-text Отображение позиции на текущую дату в режиме реального времени.
				.text.about__block-3-text Возможность просмотра позиции на любую историческую дату.
				.text.about__block-3-text Построение диаграмм  распределения активов в портфеле.
				.text.about__block-3-text Построение графика доходности, прибыли за период с возможностью сравнения с выбранными бенчмарками.
				.text.about__block-3-text Соблюдение инвестиционных деклараций.

block footer
	+footer('', false)





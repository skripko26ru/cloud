extends ../../layout/main.pug

block db
	- var navActive = 'blog';

block head
	+head(
		'Digital Cloud - Блог',
		'Свежие новости от банковского и брокерского секторов Российской экономики',
		'CloudFactory, ВТБ, ПСБ, Алфа-Страхование, Россельхозбанк, БКС '
	)

block header
	+header('#F9F9FD')

block content
	main
		-
			var blogList = [
				{ date: '15.09.2019 г.', link: 'vtb-lider-2019.html', content: 'Банк ВТБ стал безусловным лидером российского рынка' },
				{ date: '16.09.2019 г.', link: 'vtb-lider-2019.html', content: 'Банк ВТБ стал безусловным лидером российского рынка' },
				{ date: '17.09.2019 г.', link: 'vtb-lider-2019.html', content: 'Банк ВТБ стал безусловным лидером российского рынка' },
				{ date: '18.09.2019 г.', link: 'vtb-lider-2019.html', content: 'Банк ВТБ стал безусловным лидером российского рынка' },
				{ date: '19.09.2019 г.', link: 'vtb-lider-2019.html', content: 'Банк ВТБ стал безусловным лидером российского рынка' },
				{ date: '20.09.2019 г.', link: 'vtb-lider-2019.html', content: 'Банк ВТБ стал безусловным лидером российского рынка' },
			]

		.blog.container
			.title.blog__title Журнал событий
			.blog__container
				each item in blogList				
					.blog__item
						.blog__date= item.date
						.blog__line
						.blog__text= item.content
						.blog__wrap
							.blog__read
								a(href=`/blog/${item.link}`) Читать далее
							.blog__arrow
								a(href=`/blog/${item.link}`) 	
									img(src= '/../assets/img/arrow-1.png' alt= 'native')

block footer
	+footer('', false)
mixin header(color, text, opts)
	.header(style=`color: ${color};`)
		a.header__logo(href='/' style=`color: ${color}`)= text
		.header__shade-hidden
		.container
			.header__menu
				each nav in navHeader
					a.header__nav(style=`color: ${color}` href= nav.href class=(nav.name === navActive ? 'header__nav-active' : ''))= nav.title
			.header__phone(style=`color: ${color}`) +7 (999) 745-55-55				

		.header__nav-hidden
			.header__menu-hidden
				each nav in navList
					a.header__nav-mobile(href= nav.href class=(nav.name === navActive ? 'header--bold' : ''))= nav.title	

		.header__burger
			.header__burger-line-1(style=`background-color: ${color};`)
			.header__burger-line-2(style=`background-color: ${color};`)
			.header__burger-line-3(style=`background-color: ${color};`)